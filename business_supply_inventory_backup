 * Purpose: Program will print out each list 
 * to document the inventory for the buyer 
 * so they can re-order supplies that are low
*/

package business_supply_inventory;
import java.util.*; 

//super class 
public class business_supply_inventory {
	//declare variables
	int inventoryID; //unique number for each product 
	int count; //number of items 
	int supplyLevel; //how many need to be kept in stock 
	int price; //price of product
	//String newline = System.getProperty("line.separator");
	
	//default constructor 
	public business_supply_inventory () {} 
	
	//overloaded constructor 
	public business_supply_inventory (int myInventoryID, int myCount, int mySupplyLevel, int myPrice) {
		this.inventoryID = myInventoryID; 
		this.count = myCount; 
		this.supplyLevel = mySupplyLevel; 
		this.price = myPrice; 
	} 
	
		       
		        public int getInventoryID() {
		                return inventoryID;
		        }

		        
		        public void setInventoryID(int inventoryID) {
		                this.inventoryID = inventoryID;
		        }

		        
		        public int getCount() {
		                return count;
		        }

		        
		        public void setCount(int count) {
		                this.count =count;
		        }

		       
		        public int getSupply() {
		                return supplyLevel;
		        }

		        
		        public void setSupply(int supplyLevel) {
		                this.supplyLevel = supplyLevel; 
		        }
		        
		        public int getPrice() {
	                return price;
		        }

	        
		        public void setPrice(int price) {
	                this.price = price;
		        }

	
	//override the toString method to print out the object 
	public String toString() { 
		return "#items:" + this.count + " StockSupplyNeeded:" + this.supplyLevel + " Price($):" + this.price; 
	}
}
